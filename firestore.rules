rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for conversations collection
    match /conversations/{conversationId} {
      // Allow read if user owns the conversation
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and sets themselves as owner
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the conversation
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the conversation
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // User's mood entries
      match /mood_entries/{entryId} {
        allow read, write: if isOwner(userId);
      }

      // User's mental metrics
      match /mental_metrics/{metricId} {
        allow read, write: if isOwner(userId);
      }

      // User's music preferences
      match /music_preferences/{prefId} {
        allow read, write: if isOwner(userId);
      }

      // User's chat history
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Public collections
    match /music_recommendations/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin can write
    }

    match /tips/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin can write
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
